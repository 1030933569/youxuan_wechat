<view class="page container">
  <view wx:if="{{records.length === 0}}" class="empty text-muted">暂无订单</view>

  <view wx:else>
    <view class="order card" wx:for="{{records}}" wx:for-item="order" wx:key="id">
      <view class="head flex-between">
        <text class="time">{{order.createTime}}</text>
        <text class="status">{{order.param.orderStatusName}}</text>
      </view>

      <view class="sku" wx:for="{{order.orderItemList}}" wx:for-item="sku" wx:key="skuId">
        <image class="thumb" src="{{sku.imgUrl}}" mode="aspectFill"></image>
        <view class="sku-content">
          <view class="sku-name">{{sku.skuName}}</view>
          <view class="flex-between">
            <text class="text-red">￥{{sku.skuPrice}}</text>
            <text class="text-muted">x{{sku.skuNum}}</text>
          </view>
        </view>
      </view>

      <view class="total flex-between">
        <text class="text-muted">合计</text>
        <text class="text-red">￥{{order.totalAmount}}</text>
      </view>
    </view>

    <view class="load text-muted" wx:if="{{loading}}">加载中...</view>
    <view class="load text-muted" wx:else>{{hasMore ? '上拉加载更多' : '没有更多了'}}</view>
  </view>
</view>

