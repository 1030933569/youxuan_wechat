.order {
  padding: 18rpx;
  margin-bottom: 20rpx;
}

.head {
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.time {
  color: #666;
  font-size: 24rpx;
}

.status {
  color: #ff6500;
  font-size: 24rpx;
}

.sku {
  display: flex;
  gap: 14rpx;
  padding: 14rpx 0;
  border-bottom: 2rpx solid #f2f2f2;
}

.sku:last-child {
  border-bottom: none;
}

.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
  flex-shrink: 0;
}

.sku-content {
  flex: 1;
}

.sku-name {
  font-weight: 600;
  margin-bottom: 10rpx;
}

.total {
  padding-top: 12rpx;
}

.load {
  text-align: center;
  padding: 16rpx 0 32rpx;
}

