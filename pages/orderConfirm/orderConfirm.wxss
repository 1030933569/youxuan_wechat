.page {
  padding-bottom: 140rpx;
}

.block {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.block-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 14rpx;
}

.input {
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 16rpx;
  background: #fff;
  margin-top: 12rpx;
}

.sku {
  display: flex;
  gap: 14rpx;
  padding: 14rpx 0;
  border-top: 2rpx solid #f2f2f2;
}

.sku:first-child {
  border-top: none;
}

.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
  flex-shrink: 0;
}

.sku-content {
  flex: 1;
}

.sku-name {
  font-weight: 600;
  margin-bottom: 10rpx;
}

.bottom {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 24rpx;
  padding: 18rpx 16rpx;
}

.submit {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 22rpx;
  border-radius: 32rpx;
  background: #ff6500;
  color: #fff;
  font-size: 26rpx;
}

