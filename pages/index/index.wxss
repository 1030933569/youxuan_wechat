.page {
  padding-bottom: 140rpx;
}

.pickup {
  margin: 20rpx;
  padding: 22rpx 20rpx;
  display: flex;
  align-items: center;
}

.label {
  color: #888;
  font-size: 24rpx;
  margin-right: 14rpx;
}

.name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
}

.arrow {
  color: #bbb;
}

.category-sv {
  margin: 0 20rpx;
  padding: 10rpx 0;
}

.category-list {
  display: flex;
}

.category-item {
  width: 140rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #fff;
}

.category-name {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #555;
}

.section-title {
  margin: 30rpx 20rpx 0;
  font-size: 34rpx;
  font-weight: 700;
  color: #ff6500;
}

.bottom-actions {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  background: #ff6500;
  color: #fff;
  font-size: 30rpx;
}

.action-btn.ghost {
  background: #fff;
  color: #ff6500;
  border: 2rpx solid #ff6500;
}

